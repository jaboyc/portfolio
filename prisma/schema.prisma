// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Renderable {
  id       Int     @id @default(autoincrement())
  src      String?
  alt      String?
  pack     String?
  iconPack String?
  icon     String?

  skills      Skill[]
  projects    Project[]
  resumes     Resume[]
  workHistory WorkHistory[]
  blogPost    BlogPost[]
}

model Resume {
  id           Int           @id @default(autoincrement())
  linkedInUrl  String
  email        String
  skills       Skill[]
  projects     Project[]
  workHistory  WorkHistory[]
  renderable   Renderable    @relation(fields: [renderableId], references: [id])
  renderableId Int
  blogPost     BlogPost[]
}

model Skill {
  id              Int           @id @default(autoincrement())
  resume          Resume?       @relation(fields: [resumeId], references: [id])
  resumeId        Int?
  category        String
  name            String
  description     String
  renderable      Renderable    @relation(fields: [renderableId], references: [id])
  renderableId    Int
  color           String
  foregroundColor String
  projects        Project[]
  workHistories   WorkHistory[]
}

model Project {
  slug             String     @id
  order            Int
  renderable       Renderable @relation(fields: [renderableId], references: [id])
  renderableId     Int
  name             String
  shortDescription String
  color            String
  foregroundColor  String
  skills           Skill[]
  resume           Resume     @relation(fields: [resumeId], references: [id])
  resumeId         Int
}

model WorkHistory {
  id           Int        @id @default(autoincrement())
  renderable   Renderable @relation(fields: [renderableId], references: [id])
  renderableId Int
  name         String
  title        String
  startTime    DateTime
  endTime      DateTime?
  lineItems    String[]
  skills       Skill[]
  resume       Resume     @relation(fields: [resumeId], references: [id])
  resumeId     Int
}

model BlogPost {
  slug             String     @id
  renderable       Renderable @relation(fields: [renderableId], references: [id])
  renderableId     Int
  title            String
  subtitle         String
  shortDescription String
  body             String
  createdTime      DateTime   @default(now())
  resume           Resume     @relation(fields: [resumeId], references: [id])
  resumeId         Int
}
